Resources:
  CredentialsTable:
    Type: AWS::DynamoDB::Table
    Properties:
      KeySchema:
        HashKeyElement:
           AttributeName: "providerId"
           AttributeType: "S"
      ProvisionedThroughput:
         ReadCapacityUnits: 1
         WriteCapacityUnits: 1

files:
  "/var/app/credentialstable":
    mode: "000444"
    content: |
      `{"Ref" : "CredentialsTable"}`
      `{"Ref" : "AWS::Region"}`